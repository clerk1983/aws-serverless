{
  "name": "aws-serverless-backend",
  "version": "1.0.0",
  "description": "A simple AWS Lambda function to fetch data from DynamoDB",
  "main": "app.js",
  "scripts": {
    "prepare": "husky",
    "build": "webpack --config webpack.config.js --mode production",
    "lint": "eslint . --fix",
    "format": "prettier --write backend/**/*.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.9.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.3.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "babel-loader": "^9.1.3",
    "eslint": "^9.9.0",
    "glob": "^11.0.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0",
    "webpack-cli": "^5.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "npm run format"
    ]
  }
}
