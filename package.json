{
  "name": "aws-serverless",
  "version": "1.0.0",
  "description": "A simple AWS Lambda function to fetch data from DynamoDB",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "webpack --config webpack.config.js --mode development",
    "lint": "eslint . --fix",
    "test": "jest",
    "format": "prettier --write **/*.ts"
  },
  "packageManager": "yarn@4.4.0",
  "dependencies": {
    "dayjs": "^1.11.12"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.9.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.3.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "aws-sdk-mock": "^6.1.1",
    "babel-loader": "^9.1.3",
    "eslint": "^9.9.0",
    "glob": "^11.0.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "npm run format",
      "npm run test"
    ]
  }
}
